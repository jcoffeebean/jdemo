<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d] [%-5p] [%t] %-17c{2} (%13F:%L) %3x - %m%n" />
		</layout>
		<!--限制输出级别 -->
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="TRACE" />
			<param name="LevelMax" value="ERROR" />
		</filter>
	</appender>
	
	<appender name="logFile" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="../logs/j.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd'.log'" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d] [%-5p] [%t] %-17c{2} (%13F:%L) %3x - %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="levelMin" value="INFO" />
			<param name="levelMax" value="WARN" />
			<param name="AcceptOnMatch" value="true" />
		</filter>
	</appender>

	<appender name="logFileError" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="../logs/j_error.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd'.log'" />
		<layout class="org.apache.log4j.PatternLayout">
				<param name="ConversionPattern" value="[%d] [%-5p] [%t] [%t] %-17c (%13F:%L) %3x - %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="levelMin" value="WARN" />
			<param name="levelMax" value="ERROR" />
			<param name="AcceptOnMatch" value="true" />
		</filter>
	</appender>
	
    <!-- Application Loggers -->
    <logger name="study">
        <level value="INFO" />
    </logger>

    <!-- 3rdparty Loggers -->
    <logger name="org.springframework.core">
        <level value="INFO" />
    </logger>

    <logger name="org.springframework.beans">
        <level value="INFO" />
    </logger>

    <logger name="org.springframework.context">
        <level value="INFO" />
    </logger>

    <logger name="org.springframework.web">
        <level value="INFO" />
    </logger>
    <logger name="org.springframework.jdbc">
        <level value="debug,stdout" />
    </logger>    
    
    <logger name="org.mybatis.spring">
        <level value="debug,stdout" />
    </logger>
    <logger name="java.sql">
        <level value="debug,stdout" />
    </logger>
    
    <logger name="org.apache.ibatis.cache">
        <level value="debug,stdout" />
    </logger>
    <!-- Root Logger -->
    <root>
        <priority value="WARN" />
        <appender-ref ref="console" />
		<appender-ref ref="file" />
    </root>

</log4j:configuration>
